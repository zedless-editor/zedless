{
  "languages": {
    "Markdown": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "TOML": {
      "formatter": "auto",
      "format_on_save": "off"
    },
    "YAML": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "JSON": {
      "tab_size": 2,
      "preferred_line_length": 120,
      "formatter": "auto"
    },
    "JSONC": {
      "tab_size": 2,
      "preferred_line_length": 120,
      "formatter": "auto"
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "CSS": {
      "tab_size": 2,
      "formatter": "auto"
    },
    "Rust": {
      "tasks": {
        "variables": {
          "RUST_DEFAULT_PACKAGE_RUN": "zed"
        }
      }
    },
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": [
            "--filename={buffer_path}"
          ]
        }
      }
    }
  },
  "file_types": {
    "JSONC": [
      "**/assets/**/*.json"
    ]
  },
  "hard_tabs": false,
  "formatter": "auto",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "file_scan_exclusions": [
    "crates/assistant_tools/src/edit_agent/evals/fixtures",
    "crates/eval/worktrees/",
    "crates/eval/repos/",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ]
}
